# .env
# Split output into multiple files (1 = single file, >1 = multiple chunks)
NUM_CHUNKS=1

# Source file/directory to process (supports .zip, local path, or git URL)
INPUT_PATH=./inputs/go_db_sample_7.zip

# Destination path for generated files (without file extension)
OUTPUT_PATH=./outputs/go_db_sample_7

# Output format: 'txt' for plain text, 'pdf' for formatted document
OUTPUT_FORMAT=txt

# Comma-separated list of project types to apply file filters
# Available types: springboot, reactvite, java_db, golang_api, golang_db
# Each type uses its own whitelist/blacklist patterns from config/
PROJECT_TYPE=springboot, reactvite, java_db, golang_api, golang_db